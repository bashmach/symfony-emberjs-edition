{
    "name": "ucsf-ckm/symfony-emberjs-edition",
    "license": "MIT",
    "type": "project",
    "description": "The \"Symfony EmberJS Edition\" distribution",
    "autoload": {
        "psr-0": { "": "src/", "SymfonyStandard": "app/" }
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "2.6.x-dev",
        "doctrine/orm": "~2.2,>=2.2.3",
        "doctrine/doctrine-bundle": "~1.2",
        "twig/extensions": "~1.0",
        "kriswallsmith/assetic": "dev-master as 1.2",
        "symfony/assetic-bundle": "dev-master",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.4",
        "sensio/distribution-bundle": "~3.0",
        "sensio/framework-extra-bundle": "~3.0",
        "incenteev/composer-parameter-handler": "~2.0",
        "friendsofsymfony/rest-bundle": "1.4.*",
        "jms/serializer-bundle": "0.13.*",
        "nelmio/api-doc-bundle": "2.*",
        "friendsofsymfony/jsrouting-bundle": "~1.5",
        "nelmio/cors-bundle": "~1.4",
        "sp/bower-bundle": "~0.11"
    },
    "require-dev": {
        "sensio/generator-bundle": "~2.3",
        "phpunit/phpunit": "@stable",
        "squizlabs/php_codesniffer": "@stable",
        "liip/functional-test-bundle": "@stable",
        "doctrine/doctrine-fixtures-bundle": "@stable",
        "lmammino/jsmin4assetic": "@stable",
        "symfony/var-dumper": "2.6.x"
    },
    "scripts": {
        "post-root-package-install": [
            "SymfonyStandard\\Composer::hookRootPackageInstall"
        ],
        "post-install-cmd": [
            "Acme\\ApiBundle\\Composer\\HerokuHandler::populateEnvironment",
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles",
            "Acme\\EmberBundle\\Composer\\ScriptHandler::build"
        ],
        "post-update-cmd": [
            "Acme\\ApiBundle\\Composer\\HerokuHandler::populateEnvironment",
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles",
            "Acme\\EmberBundle\\Composer\\ScriptHandler::build"
        ],
        "compile": [
            "Acme\\ApiBundle\\Composer\\HerokuHandler::updateSchema"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "symlink",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml",
            "env-map": {
                "database_driver": "SYMFONY__DATABASE_DRIVER",
                "database_name": "SYMFONY__DATABASE_NAME",
                "database_user": "SYMFONY__DATABASE_USER",
                "database_host": "SYMFONY__DATABASE_HOST",
                "database_password": "SYMFONY__DATABASE_PASSWORD",
                "ember_api_host": "SYMFONY__EMBER_API_HOST"
            }
        },
        "branch-alias": {
            "dev-master": "2.6-dev"
        }
    }
}
